
.zhezhao{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,.5);
	z-index: 999;
}
.verifyBox{
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	width: 85%;
	background-color: #fff;
	border-radius: 20rpx;
	box-shadow: 0 0 5rpx rgba(0,0,0);
}
.pintuBox{
	position: relative;
}
.pintuBg{
	width: 610rpx;
	height: 343rpx;
	display: block;
	margin: 17rpx auto;
}
.huakuaiBox{
	position: relative;
	height: 80rpx;
	width: 610rpx;
	margin: 25rpx auto;
}
.yinying{
	position: absolute;
	width: 80rpx;
	height: 80rpx;
	background-color: rgba(0,0,0,.5);
}
.huakuaiBox movable-area{
	height: 80rpx;
	width: 100%;
}
.huakuaiBox movable-area movable-view{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	background-color: #007cff;
	background-image: url(data:image/png;base64,);
	background-repeat: no-repeat;
	background-size: auto 30rpx;
	background-position: center;
	position: relative;
	z-index: 100;
}
.pintukuai{
	position: absolute;
	top: -105rpx;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 101;
	box-shadow: 0 0 5rpx rgba(0,0,0,.3);
	overflow: hidden;
}
.pintukuai image{
	max-width: none;
	position: absolute;
	top: 0;
	left: 0;
	width: 610rpx;
	height: 343rpx;
}
.huadao{
	position: absolute;
	width: calc(100% - 35rpx);
	height: 65rpx;
	line-height: 65rpx;
	background: #eee;
	box-shadow: inset 0 0 5rpx #ccc;
	border-radius: 60rpx;
	color: #999;
	text-align: right;
	top: 50%;
	right: 0;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	font-size: 36rpx;
	padding-right: 35rpx;
	z-index: 99;
}

